<div class="item">
    <div>Avatar URL</div>
    <div>
        <input
            type="url"
            name="avatar_url"
            placeholder="http://"    
        >
    </div>
</div>

<div class="item">
    <div>Nome completo</div>
    <div>
        <input
            type="text"
            name="name"
            placeholder="Nome do professor"    
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input
            type="date"
            name="birth"   
        >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="level">
            <option disabled="disabled" selected="selected" value="value">Selecione uma opção</option>
            <option value="medio">Ensino Médio Completo</option>
            <option value="superior">Ensino Superior Completo</option>
            <option value="mestrado">Mestrado</option>
            <option value="doutorado">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span><input type="radio" name="type" value="P" checked>Presencial</span>
        <span><input type="radio" name="type" value="D">À distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input
            type="text"
            name="area"
            placeholder="Matérias que leciona separados por vírgula"    
        >
    </div>
</div>

<button type="submit">Salvar</button>