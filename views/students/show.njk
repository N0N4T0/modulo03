{% extends "layout.njk" %}

{% block head %}

    <title>Professores - Rocketseat</title>

    <link rel="stylesheet" href="/styles/people.css">
{% endblock %}

{% block content %}
    <form class="card" method="POST" action="/teachers">
        <section class="picture"
            style="background-image: url({{teacher.avatar_url}});"
        >
        </section>

        <section class="info">
            <h3>Editar professor</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.level}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.type == "P" else "À distância"}}</div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    {% for area in teacher.areas %}
                        <span>{{area}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

        </section>
    </form>

{% endblock %}